{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["eslint", "typescript", "unicorn", "oxc", "vue"],
  "ignorePatterns": [
    "dist/**",
    "dist-ssr/**",
    "coverage/**",
    "storybook-static/**",
    "playwright-report/**",
    "test-results/**"
  ],
  "env": {
    "browser": true
  },
  "categories": {
    "correctness": "error"
  }
}
